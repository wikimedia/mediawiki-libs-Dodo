{
	"name": "wikimedia/dodo",
	"description": "DOm DOcument implementation",
	"keywords": [
		"DOM",
		"domino",
		"webidl"
	],
	"license": "MIT",
	"homepage": "https://www.mediawiki.org/wiki/Dodo",
	"authors": [
		{
			"name": "Jason Linehan",
			"email": "jlinehan@wikimedia.org"
		}
	],
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "fgnass/domino",
				"version": "2.1.6",
				"type": "tests",
				"source": {
					"url": "https://github.com/fgnass/domino",
					"type": "git",
					"reference": "ba4fbd8"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "web-platform-tests/wpt",
				"version": "2.7.840",
				"type": "tests",
				"source": {
					"url": "https://github.com/w3c/web-platform-tests",
					"type": "git",
					"reference": "6310e92"
				}
			}
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\Dodo\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\Dodo\\Tests\\": "tests/",
			"Wikimedia\\Dodo\\Tools\\TestsGenerator\\": "tools/TestsGenerator/src"
		}
	},
	"require": {
		"php": ">=7.2.9|^8.0",
		"wikimedia/idle-dom": "0.2.0",
		"wikimedia/remex-html": "^2.3"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "35.0.0",
		"mediawiki/mediawiki-phan-config": "0.10.6",
		"mediawiki/minus-x": "1.1.1",
		"ockcyp/covers-validator": "1.3.3",
		"php-parallel-lint/php-console-highlighter": "^0.5",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"phpunit/phpunit": "^8.5|^9.5",
		"nikic/php-parser": "^4.10",
		"nette/php-generator": "^3.5",
		"fgnass/domino": "^2.1",
		"league/container": "^3",
		"consolidation/robo": "^3@alpha",
		"web-platform-tests/wpt": "^2.7"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"echo phpunit",
			"@phan",
			"echo covers-validator",
			"@phpcs",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan --allow-polyfill-parser",
		"phpcs": "phpcs -sp",
		"phpunit": "phpunit",
		"update-tests": "@robo",
		"update-tags": [
			"php -r \"copy('https://doc.wikimedia.org/mediawiki-libs-IDLeDOM/main/tagfile.xml', 'tags/idledom.xml');\""
		],
		"robo": "robo --ansi --load-from $(pwd)/tools/TestsGenerator/TestsGenerator.php build"
	}
}
